---

import Sun from "../icons/Sun.astro";


---
<header class="fixed top-0 p-4 dark:bg-gray-950  bg-gray-50  w-full z-50">
  <div class="flex flex-row justify-between ">
    <div class="pixel-f">
      <a class="text-lime-400 hover:text-cyan-400" href="#hero">
        AS-DEV
      </a>
    </div>
    <div class="font-bold">
      <nav>
        <div class="text-center">
          <button id="btn-collapse" class="lg:hidden">
            <i class="fa-solid fa-bars"></i>
          </button>
        </div>
        <ul id="collapse" style="max-height: 0;" class="flex  text-center space-x-4  max-lg:flex-col max-lg:space-x-0 overflow-hidden collapse-animation">
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#hero">Inicio</a></li>
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#sobre-mi">Sobre m√≠</a></li>
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#tech-skills">Tech Skills</a></li>
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#secondary-skills">Secondary Skills</a></li>
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#formacion">Formacion</a></li>
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#experiencia">Experiencia</a></li>
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#game-portfolio">Game-dev Portfolio</a></li>
          <li><a class="btn-nav dark:hover:text-lime-400 hover:text-cyan-400" href="#web-portfolio">Web/App Portfolio</a></li>
        </ul>
      </nav>
    </div>
    <div>
      <button 
        id="dark-mode-toggle" 
        class="px-2 py-2 border-cyan-400 text-cyan-400 dark:text-lime-400 rounded-lg border-2 dark:border-lime-400"
      >
        <Sun/>
      </button>
    </div>
  </div>
</header>

<script>

  const toggleDarkMode = () => {
    document.documentElement.classList.toggle('dark');
  };

  const buttonClick = ()=>{
      
    // document.getElementById("collapse")?.classList.toggle('transition-all');
    // document.getElementById("collapse")?.classList.toggle('duration-500');
    // document.getElementById("collapse")?.classList.toggle('ease-in-out');
    // document.getElementById("collapse")?.classList.toggle('max-lg:h-full');
    // document.getElementById("collapse")?.classList.toggle('max-lg:h-0');
    document.getElementById("collapse")?.classList.toggle('collapse-animation');
    document.getElementById("collapse")?.classList.toggle('expand-animation');
    // document.getElementById("collapse")?.classList.toggle('max-lg:hidden');
    // document.getElementById("collapse")?.classList.toggle('max-lg:hidden');
    console.log("toggle!")
}

  document.getElementById('btn-collapse')?.addEventListener('click', buttonClick);
  const elements = document.getElementsByClassName('btn-nav');
  
  
  [...elements].forEach(element => {
    element?.addEventListener('click', buttonClick);

  });

  

  document.getElementById('dark-mode-toggle')?.addEventListener('click', toggleDarkMode);
</script>